{
    "variables": {
        "DIGITALOCEAN_TOKEN": "{{env `DIGITALOCEAN_TOKEN`}}",
        "HCLOUD_TOKEN": "{{env `HCLOUD_TOKEN`}}"
    },
    "builders": [{
        "type": "digitalocean",
        "api_token": "{{user `DIGITALOCEAN_TOKEN`}}",
        "image": "fedora-32-x64",
        "region": "ams3",
        "size": "s-1vcpu-2gb",
        "ssh_username": "root"
    },{
        "type": "hcloud",
        "token": "{{user `HCLOUD_TOKEN`}}",
        "image": "fedora-32",
        "location": "nbg1",
        "server_type": "cx11",
        "ssh_username": "root"
    }],
    "provisioners": [{
        "type": "ansible",
        "playbook_file": "./devbox.playbook.yml"
    }]
}